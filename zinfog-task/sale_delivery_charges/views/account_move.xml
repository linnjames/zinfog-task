
<odoo>

    <record id="invoice_delivery_charge" model="ir.ui.view">
        <field name="name">account.move.charge.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='price_subtotal']" position="after">
                <field name='invoice_delivery_charge'/>
                <field name='total'/>
            </xpath>
        </field>
    </record>


</odoo>
