<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sales_indent_report_wizard" model="ir.ui.view">
            <field name="name">sales.order.report.wizard</field>
            <field name="model">sales.order.report</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="from_date"/>
                                <field name="to_date"/>
                            </group>
                        </group>
                        <footer>
                            <button name="action_print" string="Print" type="object"
                                    class="btn-primary"/>
                             <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_sales_indent_report" model="ir.actions.act_window">
            <field name="name">Sale Order Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sales.order.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="sales_indent_report_wizard"/>
            <field name="target">new</field>
        </record>

        <menuitem id="sale_indent_report_menu_root"
                  name="Sales Order Report"
                  parent="sale.menu_sale_report"
                  action="action_sales_indent_report"
                  sequence="5"
        />
    </data>
</odoo>